  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMapRelative": ".",
          "ignore": "lib/**/**"
        }
      ],
      "envify",
      "browserify-shim",
      "jedify",
      "brfs"
    ]
  },
  "browserify-shim": {
    "citeproc": "global:CSL"
  },
  "scripts": {
    "preversion": "npm test && npm run isMaster && npm run matchesRemote",
    "postversion": "git push && git push --tags",
    "isMaster": "test master = $(git rev-parse --abbrev-ref HEAD)",
    "matchesRemote": "test $(git rev-parse @) = $(git rev-parse @{u})",
    "test": "browserify src/test/*.js | tape-run",
    "test-serve": "browserify src/test/*.js | tape-run -p 38723",
    "start": "node bin/serve",
    "start-debug": "nodemon bin/serve -w ./src/ -e 'js,jsx'"
  }
}
