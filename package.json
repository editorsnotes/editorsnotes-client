{
  "name": "editorsnotes",
  "author": "Patrick Golden",
  "private": true,
  "dependencies": {
    "backbone": "^1.1.2",
    "backbone.cocktail": "^0.5.10",
    "backbone.stickit": "^0.8.0",
    "browserify": "^9.0.3",
    "jquery": "^1.11.0",
    "leaflet": "^0.7.3",
    "route-recognizer": "^0.1.5",
    "underscore": "^1.7.0",
    "underscore-contrib": "^0.3.0",
    "watchify": "^2.4.0"
  },
  "devDependencies": {
    "brfs": "1.0.0",
    "browserify": "^8.1.3",
    "browserify-shim": "^3.8.2",
    "cookie": "^0.1.2",
    "cookie-cutter": "^0.1.1",
    "factor-bundle": "^2.3.3",
    "jed": "^1.1.0",
    "jedify": "0.0.1",
    "less": "^1.7.0",
    "mocha": "^1.18.0",
    "nunjucks": "^1.2.0",
    "node-underscorify": "0.0.14",
    "po2json": "^0.3.2",
    "request": "^2.53.0",
    "sinon": "^1.9.0",
    "testling": "^1.6.1",
    "typogr": "^0.6.5",
    "uglify-js": "^2.4.14",
    "watchify": "^2.3.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "node-underscorify",
      "jedify",
      "brfs"
    ]
  },
  "browser": {
    "jquery-ui": "./src/lib/jquery/jquery-ui-1.10.4.custom.js",
    "jquery-ui-touch-punch": "./src/lib/jquery/jquery.ui.touch-punch.js",
    "jquery-timeago": "./src/lib/jquery/jquery.timeago.js",
    "jquery-bootstrap": "./src/lib/jquery/bootstrap.min.js",
    "jquery-babbq": "./src/lib/jquery/jquery.ba-bbq.min.js",
    "sinon-event": "sinon/lib/sinon/util/event",
    "sinon-fakeserver": "sinon/lib/sinon/util/fake_server",
    "sinon-fakexhr": "sinon/lib/sinon/util/fake_xml_http_request",
    "wysihtml5": "./src/lib/wysihtml5/wysihtml5-0.3.0.min.js"
  },
  "browserify-shim": {
    "jquery-ui": {
      "depends": "jquery"
    },
    "jquery-ui-touch-punch": {
      "depends": "jquery"
    },
    "jquery-timeago": {
      "depends": "jquery"
    },
    "jquery-bootstrap": {
      "depends": "jquery"
    },
    "jquery-babbq": {
      "depends": "jquery"
    },
    "wysihtml5": "wysihtml5",
    "citeproc": "global:CSL"
  },
  "testling": {
    "harness": "mocha",
    "files": "editorsnotes_app/src/test/*.js",
    "browsers": [
      "firefox/24..latest",
      "chrome/latest",
      "ie/10..latest",
      "safari/6..latest",
      "opera/latest",
      "ipad/6..latest"
    ]
  },
  "scripts": {
    "test": "mocha editorsnotes_app/src/test/*.js",
    "start": "cd src && node server.js",
    "compile": "mkdir -p static && npm run compile-templates && browserify src/index-base.js src/index-admin.js -u src/nunjucks/server-env.js -o static/bundle.js",
    "compile-templates": "node ./src/nunjucks/precompile > ./src/nunjucks/compiled_templates.js",
    "watch": "watchify src/index-base.js src/index-admin.js -u src/nunjucks/server-env.js -o static/bundle.js -dv"
  }
}
